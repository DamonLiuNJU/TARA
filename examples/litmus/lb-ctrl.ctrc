# check integrity 

global: x y

pre: (and (= x 0) (= y 0))

thread P0 {r1}:
w1: (= r1. x)
w2: assume(= r1 1)
w3: (= y. r1)

thread P1 {r2}:
d1: (= r2. y)
d2: assume(= r2 1)
d3: (= x. r2)

post: (= P0.r1 P1.r2)


